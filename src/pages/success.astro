---
import BaseLayout from "../layout/BaseLayout.astro";
import Wrapper from "../components/utils/Wrapper.astro";
import Header from "../components/sections/Header.astro";
export const prerender = true;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Success</title>
</head>
<body class="flex justify-center items-center h-screen bg-green-100">
  <BaseLayout>
    <Wrapper class="max-w-lg mx-auto p-6 bg-white shadow-md rounded-lg">
      <Header />
      <img src="/images/another/success.svg" alt="Success" class="w-24 h-24 mx-auto mb-4" />
      <div class="text-center">
        <h1 class="text-3xl font-bold text-green-700">Success!</h1>
        <p class="mt-4">Your message has been sent successfully. We will get back to you soon.</p>
        <a href="/" class="mt-6 inline-block px-4 py-2 bg-green-600 text-white rounded-md">Go Home</a>
      </div>
      </Wrapper> 
  </BaseLayout>
</body>
</html>
